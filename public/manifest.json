{
    "name": "原神助手",
    "description": "自動簽到 + 即時資訊",
    "version": "2.1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "*://*.hoyolab.com/*",
      "*://*.geetest.com/*",
      "*://*.mihoyo.com/",
      "*://*.miyoushe.com/"
    ],
    "permissions": ["storage", "alarms", "cookies", "declarativeNetRequest"],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "/images/icon16-modified.png",
        "32": "/images/icon32-modified.png",
        "48": "/images/icon48-modified.png",
        "128": "/images/icon128-modified.png"
      }
    },
    "icons": {
      "16": "/images/icon16-modified.png",
      "32": "/images/icon32-modified.png",
      "48": "/images/icon48-modified.png",
      "128": "/images/icon128-modified.png"
    }
}